func main() -> () {
    println("Testing SIMD operations comprehensively");
    
    // Test basic vector creation and arithmetic
    let a = [1.0, 2.0, 3.0, 4.0]f32x4;
    let b = [5.0, 6.0, 7.0, 8.0]f32x4;
    
    // Element-wise operations
    let sum = a .+ b;       // Should be (6.0, 8.0, 10.0, 12.0)
    let diff = b .- a;      // Should be (4.0, 4.0, 4.0, 4.0)
    let product = a .* b;   // Should be (5.0, 12.0, 21.0, 32.0)
    
    println("SIMD operations completed successfully");
    return;
}